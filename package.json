{
	"name": "inspire-tables",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"generate:metadata": "tsx scripts/generateTableMetadata.ts",
		"generate:oracle-metadata": "tsx scripts/generateOracleMetadata.ts",
		"fix:show-defaults": "tsx scripts/fixDefaultTitles.ts",
		"fix:update-titles": "tsx scripts/fixDefaultTitles.ts --update",
		"fix:check-types": "tsx scripts/fixTableTypes.ts",
		"fix:table-types": "tsx scripts/fixTableTypes.ts --fix",
		"fix:check-missing-titles": "tsx scripts/addMissingTitles.ts",
		"fix:add-missing-titles": "tsx scripts/addMissingTitles.ts --add",
		"recategorize": "tsx scripts/recategorizeTables.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22.10.5",
		"@types/three": "^0.181.0",
		"autoprefixer": "^10.4.21",
		"glob": "^11.0.0",
		"postcss": "^8.5.6",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.19.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"cytoscape": "^3.33.1",
		"three": "^0.181.1"
	}
}
